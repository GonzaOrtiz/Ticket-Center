<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <h1>Passagers</h1>
        </div>
        <div class="input-group">
            <input type="text" class="form-control col-2"> &nbsp;
            <span class="input-group-btn">
                <button class="btn btn-dark" type="button">
                    Search<span class="fa fa-eye-slash icon"></span>
                </button>&nbsp;
                <a asp-action="Create" asp-controller="Persons">
                    <input type="button" class="btn btn-primary" value="New">
                </a>
            </span>
        </div>
        <br>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Email</th>
                    <th>Dni</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="tableBody"></tbody>
        </table>
        <nav aria-label="...">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                </li>          
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>
<!--AJAX-->

@section Scripts
{
<script type="text/javascript">
    GetAll = () => {
        $.ajax({
            method: "GET",
            url: "/api/person",
        }).done((personList) => {
            $.each(personList, (index, person) => {
                addRow(person);
            });
        });
    }

    addRow = (person) => {
        const row = `
            <tr>
                <td>${person.firstName}</td>
                <td>${person.lastName}</td>
                <td>${person.email}</td>
                <td>${person.dni}</td>
                <td>
                    <a href='/persons/edit?id=${person.id}'>Actualizar</a> -
                    <a href='#' data-id='${person.id}'>Eliminar</a>
                </td>
            </tr>
        `;

        $("#tableBody").append(row);
    }

    redirecToIndex = () => {
        return window.location.replace("/persons");
    }

    handleDelete = () => {
        $("#tableBody").on("click", "tr>td:last-child>a[href='#']", (event) => {
            const personId = $(event.currentTarget).attr("data-id");
            const entityUrl = `/api/person/${personId}`;

            $.ajax({
                method: "DELETE",
                url: entityUrl,
            }).done(() => {
                redirecToIndex();
            });
        })
    }

    $(document).ready(() => {
        GetAll();
        handleDelete();
    })
</script>
}
