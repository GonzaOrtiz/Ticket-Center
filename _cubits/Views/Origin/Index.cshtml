@section Scripts
{
<script>
const Counter = {
  data() {
    return {
      counter: 'Hola',
      originsArray: null,
    }
  },
  methods: {
     async pullGetAllOrigins() {
         await axios.get('https://localhost:44366/' + 'api/origin').then((result) => {
             this.originsArray = result.data;
             console.log(this.originsArray);
         }).catch((error) => {
             console.log(error);
             this.errored = true;
         });
     },
  },
  created(){
      this.pullGetAllOrigins();
  },
}

Vue.createApp(Counter).mount('#counter')
</script>
}
